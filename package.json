{
  "name": "mcp-generic-prompts",
  "version": "1.0.0",
  "main": "dist/mcp-entry.cjs",
  "author": "",
  "type": "module",
  "private": true,
  "license": "UNLICENSED",
  "description": "MCP server for managing and rendering generic prompt templates",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "prompts",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-generic-prompt.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mcp-generic-prompt/issues"
  },
  "homepage": "https://github.com/yourusername/mcp-generic-prompt#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/mcp-entry.ts",
    "build": "vite build",
    "start": "node dist/mcp-entry.cjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.6",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-plugin-static-copy": "^2.0.0",
    "vitest": "^4.0.0",
    "vitest-mock-extended": "^2.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
